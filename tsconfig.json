{
	"compilerOptions": {
		"target": "ES2023",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			},
			{
				// https://github.com/emotion-js/emotion/issues/1037#issuecomment-1618248491
				"name": "@styled/typescript-styled-plugin",
				"lint": {
					"validProperties": ["text-wrap", "interpolate-size"]
				}
			}
		],
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
	"exclude": ["node_modules"]
}
